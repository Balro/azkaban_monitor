<configuration>
    <zookeeper>
        <quorum>zk:2181,zk2:2181,zk3:2181</quorum>
        <node>/monitor</node>
        <timeout>90000</timeout>
    </zookeeper>
    <monitor>
        <heartbeat>
            <interval>20000</interval>
        </heartbeat>
    </monitor>
    <azkaban>
        <dbhost>localhost</dbhost>
        <dbport>3306</dbport>
        <dbuser>azkaban</dbuser>
        <dbpasswd>azkaban</dbpasswd>
        <interval>60000</interval>
        <alert>
            <allfailed>
                <name>*</name>
                <type>job</type>
                <status>70</status>
                <sender>*</sender>
            </allfailed>
            <end>
                <name>end</name>
                <type>flow</type>
                <project>days</project>
                <starttime>01:00</starttime>
                <endtime>05:30</endtime>
                <sender>*</sender>
            </end>
            <hdw_user_new_device>
                <name>hdw_user_new_device</name>
                <type>job</type>
                <project>days</project>
                <endtime>05:30</endtime>
                <sender>*</sender>
            </hdw_user_new_device>
            <hdw_user_product_order>
                <name>hdw_user_product_order</name>
                <type>job</type>
                <project>days</project>
                <endtime>05:30</endtime>
                <sender>*</sender>
            </hdw_user_product_order>
            <hdw_user_new_active>
                <name>hdw_user_new_active</name>
                <type>job</type>
                <project>days</project>
                <endtime>05:30</endtime>
                <sender>*</sender>
            </hdw_user_new_active>
        </alert>
    </azkaban>
    <senders>
        <qinghe>
            <type>onealert</type>
            <app>c057ef89-2aeb-3091-1c0a-fc51776a9aab</app>
            <week>2,4,6,7</week>
            <hour>0-6</hour>
        </qinghe>
        <moyu>
            <type>onealert</type>
            <app>d31a87e5-378d-fceb-68f3-f7a7bd38f9c1</app>
            <week>1,3,5</week>
            <hour>0-6</hour>
        </moyu>
    </senders>
</configuration>